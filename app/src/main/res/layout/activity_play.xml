<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/White"
    tools:context="com.example.saint.app001.Play">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/jia"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text=""
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:id="@+id/ModeChange"
        android:layout_margin="5dp"
        android:layout_below="@+id/TextArtists"
        android:background="@drawable/roundplay"
        />

    <Button
        android:text=""
        android:layout_height="75sp"
        android:layout_width="75sp"
        android:id="@+id/Last"
        android:layout_margin="5dp"
        android:layout_below="@+id/TextArtists"
        android:layout_toRightOf="@id/ModeChange"
        android:background="@drawable/prev"
        />

    <Button
        android:text=""
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:id="@+id/PlayandPause"
        android:layout_below="@+id/TextArtists"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/Last"
        android:background="@drawable/pause"
        />

    <Button
        android:text=""
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:id="@+id/Next"
        android:layout_margin="5dp"
        android:layout_below="@+id/TextArtists"
        android:layout_toRightOf="@id/PlayandPause"
        android:background="@drawable/next"
        />

    <TextView
        android:text=""
        android:textSize = "30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/TextTitle" />

    <TextView
        android:text=""
        android:textSize= "15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextTitle"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/TextArtists" />
</RelativeLayout>
