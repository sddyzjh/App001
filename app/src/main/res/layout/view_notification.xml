<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="75sp"
        android:layout_height="75sp"
        app:srcCompat="@drawable/q"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/prev"
        android:layout_toEndOf="@+id/imageView2"
        android:id="@+id/notification_last" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/notification_last"
        android:background="@drawable/pause"
        android:id="@+id/notification_playandpause" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/notification_playandpause"
        android:background="@drawable/next"
        android:id="@+id/notification_next" />




</RelativeLayout>